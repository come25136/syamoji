<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/picker_item_spacing"
    android:background="@drawable/programguide_item_program_background"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:layout_margin="20dp"
    tools:parentTag="android.widget.FrameLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                style="@style/ProgramGuide.Text.Program.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Item title" />

            <TextView
                android:id="@+id/minute"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:background="@color/programguide_minute_background_color"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:paddingRight="3dp"
                android:paddingBottom="1dp"
                android:gravity="right"
                android:textSize="11.5sp"
                tools:text="10" />

        </LinearLayout>

        <TextView
            android:id="@+id/description"
            style="@style/ProgramGuide.Text.Program.Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Item description" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_gravity="bottom"
        android:duplicateParentState="true"
        android:minWidth="0dp"
        android:progressBackgroundTint="@color/programguide_item_progress_background"
        android:progressTint="@color/programguide_item_progress_foreground"
        android:visibility="gone"
        tools:progress="50"
        tools:visibility="visible" />
</merge>